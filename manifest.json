{
    "manifest_version": 3,
    "name": "까까스",
    "version": "1.0",
    "description": "중고 거래 도우미",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
    },
    "permissions": [
      "sidePanel",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://*.bunjang.co.kr/*"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://talk.bunjang.co.kr/*",
          "https://m.bunjang.co.kr/products/*"
        ],
        "js": ["content_script.js"],
        "all_frames": true
      }
    ],
    "action": {
      "default_title": "채팅 사이드탭 열기",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
}