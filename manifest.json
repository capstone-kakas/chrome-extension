{
    "manifest_version": 3,
    "name": "Chat Side Panel",
    "version": "1.0",
    "description": "채팅 메시지를 사이드탭에 표시하는 확장 프로그램",
    "permissions": [
      "sidePanel",
      "scripting"
    ],
    "host_permissions": [
      "https://*.bunjang.co.kr/*",
      "https://talk.bunjang.co.kr/*"
    ],
    "side_panel": {
      "default_path": "sidepanel_chat.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://talk.bunjang.co.kr/*"
        ],
        "js": ["content_script.js"],
        "all_frames": true
      }
    ],
    "action": {
      "default_title": "채팅 사이드탭 열기"
    },
    "background": {
      "service_worker": "background.js"
    }
}