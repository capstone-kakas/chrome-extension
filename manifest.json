{
    "manifest_version": 3,
    "name": "Bunjang Chat Helper1",
    "version": "1.0.1",
    "description": "Bunjang chat helper extension",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
    },
    "permissions": [
      "storage",
      "tabs",
      "sidePanel"
    ],
    "host_permissions": [
      "https://m.bunjang.co.kr/*",
      "https://talk.bunjang.co.kr/*"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://m.bunjang.co.kr/products/*",
          "https://m.bunjang.co.kr/talk2/user/*",
          "https://talk.bunjang.co.kr/*",
          "https://talk.bunjang.co.kr/talk2/user/*"
        ],
        "js": ["content_script.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_title": "Bunjang Chat Helper1",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
}